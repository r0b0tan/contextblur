{
  "name": "contextblur",
  "version": "0.1.0",
  "description": "Experimental text transformation engine for stylometric signal reduction.",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:frontend": "vite --config frontend/vite.config.ts",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:frontend\"",
    "build": "tsc",
    "build:frontend": "vite build --config frontend/vite.config.ts",
    "build:all": "npm run build:frontend && npm run build",
    "typecheck:frontend": "tsc --project frontend/tsconfig.json --noEmit",
    "start": "node dist/index.js",
    "test": "vitest run",
    "eval": "tsx src/eval/run.ts"
  },
  "dependencies": {
    "@fastify/static": "^6.12.0",
    "fastify": "^4.28.0",
    "undici": "^6.19.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "concurrently": "^9.2.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tsx": "^4.19.0",
    "typescript": "^5.5.0",
    "vite": "^5.4.21",
    "vitest": "^2.0.5"
  }
}
